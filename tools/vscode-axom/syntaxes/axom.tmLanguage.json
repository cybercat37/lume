{
  "scopeName": "source.axom",
  "name": "Axom",
  "patterns": [
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" }
  ],
  "repository": {
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.axom",
          "begin": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.axom" } },
          "end": "\"",
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.axom" } },
          "patterns": [
            { "name": "constant.character.escape.axom", "match": "\\\\(\\\\|\"|n|t|r)" }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.axom", "match": "\\b\\d+\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.axom",
          "match": "\\b(let|mut|fn|return|match)\\b"
        },
        {
          "name": "keyword.other.axom",
          "match": "\\b(print|println|input)\\b"
        },
        {
          "name": "constant.language.boolean.axom",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        { "name": "storage.type.axom", "match": "\\b(Int|Bool|String|Unit)\\b" }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.axom", "match": "(->|=>|==|!=|<=|>=|&&|\\|\\||[+\-*/=<>])" }
      ]
    }
  }
}
